model UserOtp {
    id String @id @default(uuid())

    code String
    type OtpType

    userId String
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    expiresAt DateTime

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum OtpType {
    VERIFICATION
    RESET_PASSWORD
}