model UserOtp {
    id String @id @default(uuid())

    code String
    type OtpType

    userId String
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    expiresAt DateTime

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users_otp")
}

model RefreshToken {
    id          String @id @default(uuid())

    token       String @unique

    userId      String
    user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    expiresAt   DateTime
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@map("refresh_tokens")
}

enum OtpType {
    VERIFICATION
    RESET_PASSWORD
}
